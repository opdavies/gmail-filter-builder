{
    "name": "opdavies/gmail-filter-builder",
    "description": "Generates XML to import as Gmail filters.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Davies",
            "email": "opdavies@gmail.com"
        }
    ],
    "require": {
        "symfony/config": "^3.4",
        "symfony/console": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/filesystem": "^3.4",
        "symfony/yaml": "^3.4",
        "tightenco/collect": "^5.4 || ^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11",
        "phpunit/phpunit": "^5.7",
        "symfony/var-dumper": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Opdavies\\GmailFilterBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Opdavies\\GmailFilterBuilder\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "bin": ["bin/generate-filters", "bin/generate-filters.php"],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
