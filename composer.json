{
    "name": "opdavies/gmail-filter-builder",
    "description": "Generates XML to import as Gmail filters.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Davies",
            "email": "oliver@oliverdavies.uk"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^10.37",
        "symfony/config": "^6.0",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^10",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "files": ["src/Helpers.php"],
        "psr-4": {
            "Opdavies\\GmailFilterBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Opdavies\\GmailFilterBuilder\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "bin": ["bin/generate-filters", "bin/generate-filters.php"],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": "php-cs-fixer fix",
        "test": "phpunit && composer lint -- --dry-run"
    }
}
